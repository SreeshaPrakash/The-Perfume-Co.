<script>

document.addEventListener('DOMContentLoaded', function() {
    const today = new Date().toISOString().split('T')[0];
    const startDate=document.getElementById('startDate').value
    console.log(startDate)
    document.getElementById('endDate').setAttribute('max', today)
    document.getElementById('startDate').setAttribute('max', today)
    try {
        const chartData = <%- JSON.stringify(chartData) %>;
        let currentTimeRange = 'yearly';
        let salesChart, productChart, categoryChart, brandChart;

        // Function to fetch and update chart data
        function fetchChartData(chartType, timeRange, chartInstance) {
            fetch(`/admin/${chartType}-data?timeRange=${timeRange}`)
                .then(response => response.json())
                .then(data => {
                    chartInstance.data.labels = data.chartLabels || data.labels;
                    chartInstance.data.datasets[0].data = data.revenueData || data.data;
                    if (chartType === 'sales') {
                        chartInstance.data.datasets[1].data = data.ordersData;
                    }
                    chartInstance.update();
                })
                .catch(error => console.error(`Error updating ${chartType} chart:`, error));
        }

        // Initialize Sales Chart
        salesChart = new Chart(
            document.getElementById('salesChart').getContext('2d'),
            {
                type: 'line',
                data: {
                    labels: chartData.chartLabels,
                    datasets: [
                        {
                            label: 'Revenue (₹)',
                            data: chartData.revenueData,
                            borderColor: '#36A2EB',
                            backgroundColor: 'rgba(54, 162, 235, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            yAxisID: 'y-revenue'
                        },
                        {
                            label: 'Orders',
                            data: chartData.ordersData,
                            borderColor: '#FF6384',
                            backgroundColor: 'rgba(255, 99, 132, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            yAxisID: 'y-orders'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        'y-revenue': { position: 'left', title: { display: true, text: 'Revenue (₹)' } },
                        'y-orders': { position: 'right', title: { display: true, text: 'Orders' }, beginAtZero: true }
                    },
                    plugins: { legend: { position: 'top' } }
                }
            }
        );

        // Initialize Product Chart
        productChart = new Chart(
            document.getElementById('productChart').getContext('2d'),
            {
                type: 'doughnut',
                data: {
                    labels: chartData.topProducts.productLabels,
                    datasets: [{
                        data: chartData.topProducts.productData,
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            }
        );

        // Initialize Category Chart
        categoryChart = new Chart(
            document.getElementById('categoryChart').getContext('2d'),
            {
                type: 'doughnut',
                data: {
                    labels: chartData.topCategories.categoryLabels,
                    datasets: [{
                        data: chartData.topCategories.categoryData,
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            }
        );

        // Initialize Brand Chart
    
        console.log(chartData)
        brandChart = new Chart(
            document.getElementById('brandChart').getContext('2d'),
            {
                type: 'doughnut',
                data: {
                    labels: chartData.topBrands.brandLabels,
                    datasets: [{
                        data: chartData.topBrands.brandData,
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            }
        );

        // Dropdown listeners for Sales Chart
        document.querySelectorAll('#timeRangeDropdown + .dropdown-menu a').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const timeRange = this.textContent.toLowerCase().replace(/\s+/g, '-');
                document.getElementById('timeRangeDropdown').innerHTML = 
                    `<i class="fas fa-calendar me-1"></i> ${this.textContent}`;
                currentTimeRange = timeRange;
                fetchChartData('chart', timeRange, salesChart);
            });
        });

        // Filter listeners for Product, Category, and Brand Charts
        document.querySelectorAll('.filter-option').forEach(option => {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                const chartType = this.dataset.chart;
                const timeRange = this.dataset.range;
                const chart = chartType === 'product' ? productChart :
                             chartType === 'category' ? categoryChart : brandChart;
                fetchChartData(chartType, timeRange, chart);
            });
        });

        // Real-time polling (e.g., every 30 seconds)
        setInterval(() => {
            fetchChartData('chart', currentTimeRange, salesChart);
            fetchChartData('product', 'year', productChart); // Adjust timeRange as needed
            fetchChartData('category', 'year', categoryChart);
            fetchChartData('brand', 'year', brandChart);
        }, 30000); // Update every 30 seconds

    } catch (error) {
        console.error('Error initializing charts:', error);
    }

    // Existing report generation code remains unchanged
    document.getElementById('downloadReport').addEventListener('click', function() {
        const myModal = new bootstrap.Modal(document.getElementById('generateReportModal'));
        myModal.show();
    });

    document.getElementById('reportType').addEventListener('change', function() {
        const customDateFields = document.getElementById('customDateFields');
        customDateFields.style.display = this.value === 'custom' ? 'block' : 'none';
    });

    document.getElementById('generateReportBtn').addEventListener('click', function() {
        const reportType = document.getElementById('reportType').value;
        const reportFormat = document.getElementById('reportFormat').value;
        let downloadUrl = `/admin/download-report?reportType=${reportType}&reportFormat=${reportFormat}`;

        if (reportType === 'custom') {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            if (!startDate || !endDate) {
                alert('Please select both start and end dates');
                return;
            }
            downloadUrl += `&startDate=${startDate}&endDate=${endDate}`;
        }

        const link = document.createElement('a');
        link.href = downloadUrl;
        link.target = '_blank';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);

        bootstrap.Modal.getInstance(document.getElementById('generateReportModal')).hide();
    });
});



</script>




